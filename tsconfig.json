{
  "compilerOptions": {
    "target": "ES6",                                // Set JavaScript version to ES6
    "lib": ["DOM", "DOM.Iterable", "ES6"],          // Include libraries to enable ES6 and DOM features
    "allowJs": true,                                // Allow JavaScript files in your project
    "skipLibCheck": true,                           // Skip type checking of declaration files
    "esModuleInterop": true,                        // Enable import/export interop between CommonJS and ESModules
    "allowSyntheticDefaultImports": true,           // Allow default imports from modules with no default export
    "strict": true,                                 // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true,       // Ensure consistent casing in module imports
    "noFallthroughCasesInSwitch": true,             // Ensure all switch statements have `case` blocks
    "module": "ES6",                                // Use ES6 module system
    "moduleResolution": "node",                     // Resolve modules like Node.js does
    "resolveJsonModule": true,                      // Enable importing .json files
    "isolatedModules": true,                        // Ensure that each file can be safely transpiled without relying on other files
    "jsx": "react-jsx",                             // Enable JSX/TSX for React using the modern JSX runtime
    "noEmit": true                                  // Prevent emitting compiled files
  },
  "include": ["src"],                               // Include all files in the src directory
  "exclude": ["node_modules", "build", "dist"]      // Exclude node_modules and build folders
}
